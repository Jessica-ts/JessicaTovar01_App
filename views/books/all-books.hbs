<div class="col">
	{{#each books}}	<!--Si exixten los post de libros  recorrelos-->
	<div class="lista">
		<div class="separa">
			<div class= "card-body">
				<h4 class="card-title d-flex justify-content-between align-items-center">
					{{title}} <a href="/books/edit/{{_id}}"><i class="fas fa-edit"></i></a>
				</h4>
				<p> Author: {{author}}</p>
				<p> Description: {{description}} </p>
				<p> Price: {{price}} </p>
				<p class="card-title d-flex justify-content-between align-items-center"> Where to get it? <br> {{store}} 

				<p><img class="imageFile" src="/uploads/{{filename}}" alt="{{title}}"></p>

				<form action="/books/delete/{{_id}}?_method=DELETE" method="POST">
					<input type="hidden" name="_method" value="DELETE">
					<button class="btnDelete" type="submit">
						Delete
					</button>
				</form>
				<form action="/books/{{_id}}/comment">
					<button class="btnDelete" type="submit">
						Comment
					</button>
				</form>
			</div>
		</div>
	</div>

	{{else}}
		<div class="mx-auto"
			<div class = "card-body">
				<h1> Hello {{user.name}} </h1> <!--ARREGLAR ESTO (min: 3:10:00)-->
				<p class="lead"> There are not books yet </p>
				<!--Con esto lo mandamos al formulario de agregar notas (porque no hay actualmente) -->
				<a href="/books/add" class="btn btn-success"> Create One Post! </a>
			</div>
		</div>
	{{/each}}
</div>