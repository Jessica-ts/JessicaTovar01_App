<h1>Hello {{user.name}}, what are you searching? </h1>
<br>
<h2> Search Authors </h2>
<form action="/search" method="GET">
	<label> Search by Author </label>
	<input type="text" name="author" value="{{SearchOptions.author}}">
	<br>
	<label> Search by Title </label>
	<input type="text" name="title" value="{{SearchOptions.title}}">
	
	<button class="btnDelete" type="submit"> Search </button>
</form>

{{#each busquedas}}
	<div class="lista">
		<div class="separa">
			<div class= "card-body">
				<h4 class="card-title d-flex justify-content-between align-items-center">
					{{title}} <a href="/books/edit/{{_id}}"><i class="fas fa-edit"></i></a>
				</h4>
				<p> Author: {{author}} </p>
				<p> Description: {{description}} </p>
				<p> Price: {{price}} </p>
				<p class="card-title d-flex justify-content-between align-items-center"> Where to get it? <br> {{store}} <!--<a 

				href="/books/{{_id}}/comment"><i class="fas fa-comment"></i></a>--></p>
				
				<img class="imageFile" src="/uploads/{{filename}}" alt="{{title}}">
				<form action="/books/delete/{{_id}}?_method=DELETE" method="POST">
					<input type="hidden" name="_method" value="DELETE">
					<button class="btnDelete" type="submit">
						Delete
					</button>
				</form>
				<form action="/books/{{_id}}/comment">
					<button class="btnDelete" type="submit">
						Comment
					</button>
				</form>
			</div>
		</div>
	</div>
{{/each}}


